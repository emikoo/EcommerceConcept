<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcommerceConcept" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash</item>
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!--        <item name="android:navigationBarColor">@android:color/white</item>-->
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/colorBlack</item>
    </style>

    <style name="title_15sp_regular_red">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:fontFamily">@font/markpro_regular</item>
    </style>

    <style name="title_12sp_regular_grey">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:fontFamily">@font/markpro_regular</item>
    </style>

    <style name="title_20sp_bold_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:fontFamily">@font/markpro_bold</item>
    </style>

    <style name="title_15sp_medium_black">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:fontFamily">@font/markpro_medium</item>
    </style>

    <style name="title_25sp_bold_black">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/sp_25</item>
        <item name="android:fontFamily">@font/markpro_bold</item>
    </style>

    <style name="title_35sp_bold_black">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/sp_35</item>
        <item name="android:fontFamily">@font/markpro_bold</item>
    </style>
</resources>